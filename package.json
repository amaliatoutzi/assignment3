{
  "name": "gemini-spotlight-demo",
  "version": "1.0.0",
  "description": "A demo application showing how to use Google's Gemini API to recommend museums with rationales",
  "main": "dist/spotlight-tests.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/spotlight-tests.js",
    "dev": "ts-node --transpile-only src/spotlight-tests.ts",
    "test": "npm run build && node dist/spotlight-tests.js",
    "cold": "npm run build && node -e \"require('./dist/spotlight-tests.js').testColdStartThenAI()\"",
    "history": "npm run build && node -e \"require('./dist/spotlight-tests.js').testHistoryAndRefresh()\"",
    "error": "npm run build && node -e \"require('./dist/spotlight-tests.js').testLLMErrorFallback()\""
  },
  "keywords": [
    "gemini",
    "ai",
    "spotlight",
    "museums",
    "recommendations",
    "typescript"
  ],
  "author": "Student Demo",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
